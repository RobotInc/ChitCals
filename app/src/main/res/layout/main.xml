<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editnum"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="11dp"
       android:textSize="24dp"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/answer" />

    <TextView
        android:text="Chit Calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Chit Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/chitAmountView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/chitAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/chitAmountView"
        android:layout_alignTop="@+id/chitAmountView"
        android:layout_toRightOf="@+id/chitAmountView"
        android:layout_alignBottom="@+id/chitAmountView" />

    <TextView
        android:text="Payble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/textView3"
        android:layout_above="@+id/editnum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:textSize="20dp"
        android:ems="8"
        android:layout_marginTop="13dp"
        android:id="@+id/editnum"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/chitAmountView"
        android:layout_alignEnd="@+id/chitAmountView" />

    <TextView
        android:text="Bid Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/chitAmountView"
        android:layout_alignLeft="@+id/chitAmountView"
        android:layout_alignStart="@+id/chitAmountView" />

</RelativeLayout>